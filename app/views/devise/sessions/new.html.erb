<div class="d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 60px);">
<div class="card p-3">
  <div class="container">
              <h3 class="m-3 p-0 text-center"><strong>Sign In</strong></h3>
  <%= form_for(resource, as: resource_name,:html => {:class => 'row g-3 my-1'}, url: session_path(resource_name)) do |f| %>
          
          <div class="col-md-12">
            <%= f.label :email ,:class => "form-label"%>
            <%= f.email_field :email, autofocus: true,:class => "form-control", autocomplete: "email" %>
          </div>
          <div class="col-12">
          
        <%= f.label :password, :class => "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password",:class => "form-control" %>
          </div>
      
        

          <div class="col-12">

      <%= f.submit "Log in", :class=>"btn btn-primary w-100 mt-4"%>
            </div>
          
          <% end %>
        <%= render "devise/shared/links" %>

        </div>

          
        </div>
</div>
</div>
 
